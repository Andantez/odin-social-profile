<div class="row justify-content-center">
  <div class="col-lg-4 col-md-4 col-sm-4 log-in-cont">
    <h1 class="log-in-header">Social Profile</h1>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 form-cont">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      input_html: { class: "input" },
                      label_html: { class:"label" } %>
        <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      input_html: { class: "input" },
                      label_html: { class:"label" } %>
        <%= f.input :remember_me, as: :boolean,  label_html: { class:"remember-me"} if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "log-in-btn"%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
