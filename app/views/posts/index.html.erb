<ul>
  <% @posts.each do |post| %>
    <%= render 'shared/post_info', post: post %>
    <li><%= render partial: 'comment_form', locals: {post: post, comment: @comment} %></li>
    <% post.comments.each do |comment| %>
      <%= render 'shared/post_comment', comment: comment %>
    <% end %>
    <%= render 'shared/like_form', post: post %>
  <% end %>
</ul>
<%= link_to "Create new post", new_post_path %>


