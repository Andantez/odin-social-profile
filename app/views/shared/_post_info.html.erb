<h3> <%= link_to post.user.username, user_path(post.user)%></h3>
<% unless (current_user == post.user) || current_user.friends?(post.user)  %>
  <%= form_with(model: current_user.friendships.new, local: true) do |f| %>
    <%= hidden_field_tag :user, post.user.id %>
    <%= f.submit "Add Friend" %>
  <% end %>
<% end %>
<small>Posted <%= time_ago_in_words(post.created_at)%> ago</small>
<li><%= post.content %> <%= image_tag post.image.variant(resize_to_limit: [500, 500]) if post.image.attached? %></li>
<% if current_user == post.user%>
  <%= link_to "delete", post, method: :delete, data: {confirm: 'Are you sure?'}, remote: true %>
  <%= link_to "edit", edit_post_path(post) %>
<% end %>
