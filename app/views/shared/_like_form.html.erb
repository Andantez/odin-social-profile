<% if liked?(post) %>
  <%= form_with(model: current_user.likes.find_by(post_id: post.id), method: :delete) do |f| %>
    <%=f.button'<i class="fas fa-thumbs-up"></i> Like'.html_safe, class: "btn dislike" %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.likes.new) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.button'<i class="far fa-thumbs-up"></i> Like'.html_safe, class: "btn like"%>
  <% end %>
<% end %>
